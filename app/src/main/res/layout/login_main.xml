<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xbg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/bt_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/login_close_btn"
        android:clickable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="智能干式食品安全检测 "
        android:textSize="28dp" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="6dp"
        android:src="@drawable/logo" />


    <RelativeLayout
        android:id="@+id/RelativeLayout02"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0px"
        android:layout_marginRight="15.0px"
        android:layout_marginTop="66dp"
        android:paddingBottom="10.0px"
        android:paddingTop="21.0px">


        <EditText
            android:id="@+id/et_user"
            android:layout_width="fill_parent"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5.0px"
            android:layout_marginLeft="1.0dip"
            android:layout_marginRight="1.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@drawable/qq_edit_login"
            android:hint="用户名"
            android:paddingLeft="46.0sp"
            android:saveEnabled="true"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_user"
            android:layout_alignLeft="@+id/et_user"
            android:layout_alignTop="@+id/et_user"
            android:layout_marginRight="15.0sp"
            android:gravity="center_vertical"
            android:paddingLeft="7.0sp"
            android:src="@drawable/u" />

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_user"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:padding="8dp"
            android:src="@drawable/plus"
             />

        <!--
                <ImageButton
                    android:id="@+id/ImageButton02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/et_user"
                    android:layout_alignRight="@+id/et_user"
                    android:layout_alignTop="@+id/et_user"
                    android:layout_marginRight="1.0dip"
                    android:background="@drawable/more_select" />-->

        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:layout_alignRight="@+id/et_user"
            android:layout_below="@+id/et_user"
            android:layout_marginRight="1.0dip"
            android:layout_marginTop="3dp"
            android:background="@drawable/qq_edit_login"
            android:hint="请输入密码"
            android:imeOptions="actionGo"
            android:inputType="textPassword"
            android:maxLength="16"
            android:paddingLeft="46.0sp"
            android:saveEnabled="true"
            android:singleLine="true" />

        <ImageView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_pass"
            android:layout_alignRight="@+id/TextView01"
            android:layout_alignTop="@+id/et_pass"
            android:gravity="center_vertical"
            android:paddingLeft="7.0sp"
            android:src="@drawable/p" />

        <ImageView
            android:id="@+id/iv_clean"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/et_pass"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:padding="8dp"
            android:src="@drawable/clean"
            android:visibility="invisible" />

        <Button
            android:id="@+id/bt_load"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView02"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/login_button_big_orange_bg"
            android:text="登录 "
            android:textColor="#99ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

