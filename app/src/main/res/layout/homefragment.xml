<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xbg"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="18dp"
        android:text="首页"
        android:textColor="#ddffffff"
        android:textSize="23sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="7dp"
            android:layout_weight="3"
            android:src="@drawable/station" />

        <TextView
            android:id="@+id/tv_station"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27"
            android:gravity="center_vertical"
            android:text=":请点击此处设置站点信息"
            android:textColor="@drawable/viewpager_title_textcolor"
            android:textSize="14sp"
            android:textStyle="italic" />


            <ImageView
                android:id="@+id/ntasks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="12dp"
                android:src="@drawable/ntasks" />

    </LinearLayout>
    <!--Toolbar-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mv_box1"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:background="@drawable/cycle"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/check" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:text="样品检测"
                    android:textColor="@drawable/viewpager_title_textcolor"
                    android:textSize="21sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mv_box2"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/cycle"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/msample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:text="样品管理"
                    android:textColor="@drawable/viewpager_title_textcolor"
                    android:textSize="21sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/mv_box3"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:background="@drawable/cycle"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/mtask" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:text="任务管理"
                    android:textColor="@drawable/viewpager_title_textcolor"
                    android:textSize="21sp" />


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mv_box4"
            android:layout_width="166dp"
            android:layout_height="166dp"
            android:layout_marginLeft="6dp"
            android:background="@drawable/cycle"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:src="@drawable/mmap" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="6dp"
                    android:text="报表管理"
                    android:textColor="@drawable/viewpager_title_textcolor"
                    android:textSize="21sp" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>




