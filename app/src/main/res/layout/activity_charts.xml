<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#ddffffff"
android:orientation="vertical">

<include layout="@layout/toolbar" />


<!--Toolbar-->
<View
    android:layout_width="match_parent"
    android:layout_height="14dp"
    android:background="#33808080" />



<LinearLayout
    android:id="@+id/ll_checkinfo"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="2dp"
    android:background="#33ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:src="@drawable/checkinfo" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="检测情况"
        android:textColor="@drawable/viewpager_title_textcolor" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/arrow_right" />
</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#99808080" />

<LinearLayout
    android:id="@+id/ll_zhonghe"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="2dp"
    android:background="#33ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:src="@drawable/zhonghe" />

    <TextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="综合统计"
        android:textColor="@drawable/viewpager_title_textcolor" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/arrow_right" />
</LinearLayout>

<View
    android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="#99808080" />

<LinearLayout
    android:id="@+id/ll_sos"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_margin="2dp"
    android:background="#33ffffff"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:src="@drawable/sos" />

    <TextView

        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:text="风险预警"
        android:textColor="@drawable/viewpager_title_textcolor" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:src="@drawable/arrow_right" />
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#99808080" />

</LinearLayout>




