<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="检测单号："
                android:textSize="12sp"
                android:layout_gravity="center_vertical"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/et_testing_no"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/qq_edit_login"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/iv_testing_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="208dp"
                    android:src="@drawable/plus" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="4dp"
                android:paddingRight="8dp"
                android:src="@drawable/add" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="样品："
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp">

                <EditText
                    android:id="@+id/et_sampleType"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#87CEEB"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="5dp"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textColor="#000000" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:text="项目："
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/et_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="13dp"
                android:background="#87CEEB"
                android:layout_marginLeft="2dp"
                android:focusable="false"
                android:singleLine="true"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="批次："
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_marginRight="8dp">

                <EditText
                    android:id="@+id/et_card_batch"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/qq_edit_login"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/iv_card_batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="250dp"
                    android:src="@drawable/plus" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="人员："
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp">

                <EditText
                    android:id="@+id/et_detection_person"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/qq_edit_login"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/iv_detection_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="250dp"
                    android:src="@drawable/plus" />
            </RelativeLayout>

        </LinearLayout>


        <!--<SurfaceView-->
        <!--android:layout_width="1dp"-->
        <!--android:id="@+id/sf_pr"-->
        <!--android:layout_height="1dp" />-->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="结果："
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/qq_edit_login"
                android:textSize="24dp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp">

            <FrameLayout
                android:id="@+id/camera_preview"
                android:layout_width="1dip"
                android:layout_height="1dip" />

            <TextView
                android:id="@+id/tv_pi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:text="图片："
                android:layout_gravity="center_vertical"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_cam"
                android:layout_width="wrap_content"
                android:layout_height="150px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="11dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_pi"
                android:scaleType="centerCrop"
                android:src="@drawable/white" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lv_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/title_button"
                android:clickable="true"
                android:gravity="center"
                android:orientation="horizontal">

                <!--  <ImageView

                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="1dp"
                       android:src="@drawable/start" />-->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开始检测"
                    android:textColor="#1C5672"
                    android:textSize="20dp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>