<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/xbg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

     <!--   <include layout="@layout/toolbar" />-->

        -->

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_check"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <RadioGroup
            android:id="@+id/rg_task"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#D0DDE2"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_help"
                style="@style/main_tab_style"
                android:drawableTop="@drawable/tab_study_bg"
                android:text="帮助"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_home"
                style="@style/main_tab_style"
                android:drawableTop="@drawable/tab_home_bg"
                android:text="首页"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_admin"
                style="@style/main_tab_style"
                android:drawableTop="@drawable/tab_admin_bg"
                android:text="记录"
                android:textSize="10sp" />

            <RadioButton
                android:id="@+id/rb_setting"
                style="@style/main_tab_style"
                android:drawableTop="@drawable/tab_setting_bg"
                android:text="设置"
                android:textSize="10sp" />

        </RadioGroup>

        <!--<com.viewpagerindicator.TabPageIndicator
             android:id="@+id/tpi_menu"
             android:layout_width="match_parent"
             android:layout_weight="2"
             android:layout_height="0dp"
             android:background="#ffffff"></com.viewpagerindicator.TabPageIndicator>-->
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_right"
        android:layout_width="336dp"
        android:layout_height="match_parent"
        android:layout_gravity="right"></FrameLayout>

</android.support.v4.widget.DrawerLayout>